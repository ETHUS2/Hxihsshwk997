local ChatService = game:GetService("Chat")
local Players = game:GetService("Players")

local function showBubbleChat(message)
    local player = Players.LocalPlayer -- Obtém automaticamente o jogador que executa o script
    if player and player.Character and player.Character:FindFirstChild("Head") then
        ChatService:Chat(player.Character.Head, message, Enum.ChatColor.White)
    end
end

-- Chama a função
showBubbleChat("Para quem vai jogar o Blox Fruits eu recomendo executar o SPEED HUB que foi atualizado essa madrugada.")
